<!DOCTYPE html>
<html lang="es" class="<%= yield (:html_class) %>">
	<head>
		
		<title><%= content_for?(:title) ? yield(:title) : "Ponto" %></title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	
		<%= stylesheet_link_tag "application" %>
		<%= javascript_include_tag "application", 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>

	<body class="<%= yield (:body_class) %>">
		<!-- Start Page Loading -->
		<div id="loader-wrapper">
			<div id="loader"></div>        
			<div class="loader-section section-left"></div>
			<div class="loader-section section-right"></div>
		</div>
		<!-- End Page Loading -->
		
		<% if user_signed_in? && !(current_page?(user_confirmation_path) || current_page?(new_user_confirmation_path)) %>

			<%= render "header" %>
	
			<!-- START MAIN -->
			<div id="main">
				
				<!-- START WRAPPER -->
				<div class="wrapper">
	
					<%= render "left_sidebar_nav" %>
					
					<!-- START CONTENT -->
					<section id="content">
						
						<!--breadcrumbs start-->
						<nav id="breadcrumbs-nav" class="grey lighten-3">
							<div class="container">
								<div class="nav-wrapper">
									<h1 class="breadcrumbs-title">Blank Page</h1>
									<div class="col s12 hide-on-med-and-down">
										<a href="#" class="breadcrumb">First</a>
										<a href="#" class="breadcrumb">Second</a>
										<a href="#" class="breadcrumb">Third</a>
									</div>
								</div>
							</div>
						</nav>
		  				<!--breadcrumbs end-->	
	
						<!--start container-->
						<div class="container">
							<div class="section">
								
								<%= yield %>
								
							</div>
						</div>
						<!--end container-->
					</section>
					<!-- END CONTENT -->
	
					<%= render "right_sidebar_nav" %>
	
				</div>
				<!-- END WRAPPER -->
	
			</div>
			<!-- END MAIN -->
	
			<%= render "footer" %>
			
		<% else %>
			
			<%= yield %>
			
		<% end %>
		
		<!--<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>-->
		

	</body>
</html>