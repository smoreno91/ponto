<% page_center %>

<div class="col s12 z-depth-4 card-panel">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-card"}) do |f| %>
  
        <div class="row margin">
            <div class="input-field col s12 center">
                <%= image_tag "form-card-logo.png", alt: "", class: "circle responsive-img valign form-card-logo" %>
                <h1 class="center form-card-title">Log in</h1>
            </div>
        </div>
        
        <%= render "devise/shared/messages" %>
        
        <div class="row margin">
            <div class="input-field col s12">
                <i class="material-icons prefix">person_outline</i>
                <%= f.email_field :email, required: "required", aria: {required: true}, class: "validate", autofocus: true %>
                <%= f.label :email %>
            </div>
        </div>
        
        <div class="row margin">
            <div class="input-field col s12">
                <i class="material-icons prefix">lock_outline</i>
                <%= f.password_field :password, required: "required", aria: {required: true}, autocomplete: "off", class: 'validate' %>
                <%= f.label :password %>
            </div>
        </div>
        
        <% if devise_mapping.rememberable? -%>
            <div class="row">          
                <div class="input-field col s12">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                </div>
            </div>
        <% end -%>
        
        <div class="row">
            <div class="input-field col s12">
                <%= f.submit "Log in", class: "btn waves-effect waves-light col s12" %>
            </div>
        </div>
        
        <%= render "devise/shared/links" %>
    
    <% end %>
</div>
