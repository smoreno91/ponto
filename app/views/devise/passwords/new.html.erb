<% page_center %>

<div class="col s12 z-depth-4 card-panel">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-card"}) do |f| %>
  
        <div class="row margin">
            <div class="input-field col s12 center">
                <%= image_tag "form-card-logo.png", alt: "", class: "circle responsive-img valign form-card-logo" %>
                <h1 class="center form-card-title">Forgot your password?</h1>
            </div>
        </div>
        
        <%= devise_error_messages! %>
        
        <%= render "devise/shared/messages" %>
        
        <div class="row margin">
            <div class="input-field col s12">
                <i class="material-icons prefix">person_outline</i>
                <%= f.email_field :email, required: "required", aria: {required: true}, class: "validate", autofocus: true %>
                <%= f.label :email %>
            </div>
        </div>
        
        <div class="row">
            <div class="input-field col s12">
                <%= f.submit "Send me reset password", class: "btn waves-effect waves-light col s12" %>
            </div>
        </div>
        
        <%= render "devise/shared/links" %>
    
    <% end %>
</div>
